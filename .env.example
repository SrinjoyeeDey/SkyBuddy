# Cloudflare R2 Storage Configuration
# Copy this file to .env and fill in your actual values

# Cloudflare Account ID (found in your Cloudflare dashboard)
VITE_CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Cloudflare R2 Access Key ID
VITE_CLOUDFLARE_ACCESS_KEY_ID=your_access_key_id_here

# Cloudflare R2 Secret Access Key
VITE_CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_access_key_here

# R2 Bucket Name for storing playlists
VITE_CLOUDFLARE_BUCKET_NAME=skybuddy-playlists

# Cloudflare CDN URL for fast content delivery
VITE_CLOUDFLARE_CDN_URL=https://your-bucket.your-domain.com

# Optional: R2 Region (defaults to 'auto')
VITE_CLOUDFLARE_REGION=auto

# Development mode - set to 'true' to use localStorage fallback
VITE_DEV_MODE=false

# OpenWeather API Key for fetching weather data
VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here
